<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.mapper.EmployeeMapper">
    <select id="selectEmployeeWithId" resultType="com.example.domain.Employee" parameterType="int">
        select * from tb_employee where id = #{id}
    </select>
    <!--<select id="selectEmployeeByIdlike" resultType="com.example.domain.Employee">-->
        <!--select * from tb_employee where state = 'active'-->
        <!--&lt;!&ndash; 可选条件,如果传进来的参数有id属性,则加上id查询条件 &ndash;&gt;-->
        <!--<if test="id != null" >-->
            <!--and id = #{id}-->
        <!--</if>-->

    <!--</select>-->
    <select id="selectEmployeeByIdlike" resultType="com.example.domain.Employee">
        select * from tb_employee where state = 'active'
        <!-- 可选条件,如果传进来的参数有id属性,则加上id查询条件 -->
        <if test="loginname != null and password != null" >
            and loginname = #{password} and password = #{password}
        </if>

    </select>
    <select id="selectEmployeeChoose" parameterType="hashmap" resultType="com.example.domain.Employee">
        select * from tb_employee where state = 'active'
        <choose>
            <when test="id != null">
                and id = #{id}
            </when>
            <when test="loginname != null and password != null" >
                and loginname = #{loginname} and password = #{password}
            </when>
            <otherwise>
                and sex = "男"
            </otherwise>
        </choose>
    </select>
    <select id="selectEmployeeLike" resultType="com.example.domain.Employee" >
        select * from tb_employee
        <where>
            <if test="state != null" >
                state = #{state}
            </if>
            <if test="id != null">
                and id = #{id}
            </if>
        </where>
    </select>
    <!-- 动态更新员工信息 -->
    <update id="updateEmployee" parameterType="com.example.domain.Employee">
        update tb_employee
        <set>
            <if test="loginname != null">loginname = #{loginname},</if>
            <if test="password != null">password = #{password},</if>
            <if test="name != null">name = #{name},</if>
            <if test="sex != null">sex = #{sex},</if>
            <if test="age != null">age = #{age},</if>
            <if test="phone != null">phone = #{phone},</if>
            <if test="sal != null">sal = #{sal},</if>
            <if test="state != null">state = #{state}</if>
        </set>
        where id = #{id}
    </update>
    
    <select id="selectEmployeeIn" resultType="com.example.domain.Employee">
        select * from tb_employee where id in
        <foreach collection="list" item="item" index="index" open="(" separator="," close=")">
            #{item}
        </foreach>

    </select>
    <select id="selectEmployeeLinkeName" resultType="com.example.domain.Employee">
        <bind name="pattern" value="'%' + _parameter.getName() + '%'" />
        select * from tb_employee where loginname like #{pattern}
    </select>
</mapper>