<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.mapper.OrderMapper">
    <resultMap id="orderResultMap" type="com.example.domain.Order">
        <id property="id" column="oid" />
        <result property="code" column="code" />
        <result property="total" column="total" />
        <!-- 建立多对一的关系,一个订单对应一个用户 -->
        <association property="user" javaType="com.example.domain.User" >
            <id property="id" column="id" />
            <result property="username" column="username" />
            <result property="loginname" column="loginname" />
            <result property="password" column="password" />
            <result property="phone" column="phone" />
            <result property="address" column="address" />
        </association>
        <!-- 建立多对多映射,一个订单对应多个商品 -->
        <collection property="articles" javaType="ArrayList" column="oid"
                    ofType="com.example.domain.Article"
                    select="com.example.mapper.ArticleMapper.selectArticleByOrderId"
                    fetchType="lazy">
            <id property="id" column="id" />
            <result property="name" column="name" />
            <result property="price" column="price" />
            <result property="remark" column="remark" />
        </collection>
    </resultMap>
    <!-- 如果查询出来的列名相同,则要区分. 例如tb_user2的列名id和tb_order的列名相同 -->
    <select id="selectOrderById" resultMap="orderResultMap" >
        select u.*, o.id as oid, code, total, user_id from tb_user2 u, tb_order o
           where u.id = o.user_id and o.id = #{id}
    </select>
    <!-- 根据uer_id查询订单 -->
    <select id="selectOrderByUserId" resultMap="orderResultMap" parameterType="int">
        select * from tb_order where user_id = #{id}
    </select>
</mapper>