<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE configuration
        PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>
    <!-- 设置数据库提供者 -->
    <!--<databaseIdProvider type="DB_VENDOR" >-->
        <!--<property name="MySQL" value="mysql" />-->
    <!--</databaseIdProvider>-->
    <settings>
        <!-- 当为true时，对任意延迟属性的调用会使用带有延迟加载属性的对象完整加载，
            反之，每种属性-->
        <setting name="aggressiveLazyLoading" value="false" />
        <!-- 配置日志 -->
        <setting name="logImpl" value="LOG4J"/>
        <!--  -->
        <setting name="mapUnderscoreToCamelCase" value="true" />
        <!-- 这个是二级缓存开启的配置，默认为开启 -->
        <setting name="cacheEnabled" value="true" />
    </settings>

    <typeHandlers>
        <typeHandler javaType="com.example.mybatisstudy.type.Enabled"
                     handler="com.example.mybatisstudy.type.EnabledTypeHandler" />
    </typeHandlers>

    <!-- 配置包的别名 -->
    <!--<typeAliases>-->
        <!--<package name="com.example.mybatis.model"/>-->
    <!--</typeAliases>-->

    <!-- 数据源的配置 -->
    <environments default="development">
        <environment id="development">
            <transactionManager type="JDBC">
                <property name="" value=""/>
            </transactionManager>
            <dataSource type="UNPOOLED">
                <property name="driver" value="com.mysql.jdbc.Driver"/>
                <property name="url" value="jdbc:mysql://localhost:3306/mybaits?serverTimezone=GMT"/>
                <property name="username" value="root"/>
                <property name="password" value="mengchen0705"/>
            </dataSource>
        </environment>
    </environments>
    <mappers>
        <!--<mapper resource="com/example/mybatisstudy/mapper/PrivilegeMapper.xml" />-->
        <!--<mapper resource="com/example/mybatisstudy/mapper/RoleMapper.xml" />-->
        <!--<mapper resource="com/example/mybatisstudy/mapper/RolePrivilegeMapper.xml" />-->
        <!--<mapper resource="com/example/mybatisstudy/mapper/UserMapper.xml" />-->
        <!--<mapper resource="com/example/mybatisstudy/mapper/UserRoleMapper.xml" />-->
        <package name="com.example.mybatisstudy.mapper"/>
    </mappers>
</configuration>